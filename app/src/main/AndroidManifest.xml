<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.minjem.dumi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher_dumi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_dumi_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="q">
        <activity android:name="com.minjem.dumi.PdfViewerActivity"></activity>
        <activity android:name="com.minjem.dumi.PelengkapanRegularActivity" />
        <activity android:name="com.minjem.dumi.akun.UbahSandiActivity" />
        <activity android:name="com.minjem.dumi.akun.KebijakanPrivasiActivity" />
        <activity android:name="com.minjem.dumi.akun.DisclaimerActivity" />
        <activity android:name="com.minjem.dumi.akun.PusatBantuanActivity" />
        <activity android:name="com.minjem.dumi.BankActivity" />
        <activity android:name="com.minjem.dumi.akun.RincianAkunActivity" />
        <activity android:name="com.minjem.dumi.jenispinjaman.PinjamanPensiunActivity" />
        <activity android:name="com.minjem.dumi.IsiPulsaActivity" />
        <activity android:name="com.minjem.dumi.TakePicture" />
        <activity android:name="com.minjem.dumi.LengkapiData" />
        <activity android:name="com.minjem.dumi.OtpVerify" />
        <activity android:name="com.minjem.dumi.HalamanDepanActivity" />
        <activity
            android:name="com.minjem.dumi.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.minjem.dumi.jenispinjaman.PinjamanRegularActivity" />
        <activity android:name="com.minjem.dumi.jenispinjaman.PinjamanKilatActivity" />
        <activity android:name="com.minjem.dumi.LihatSemuaActivity" />
        <activity android:name="com.minjem.dumi.DaftarActivity" />
        <activity android:name="com.minjem.dumi.MasukActivity" />
        <activity android:name="com.minjem.dumi.MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.minjem.dumi.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>