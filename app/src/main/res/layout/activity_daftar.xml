<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:text="@string/daftarkan_diri_anda"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:autoSizeMinTextSize="25sp"
                app:autoSizeTextType="uniform"
                tools:autoSizeMaxTextSize="40sp"
                tools:autoSizeStepGranularity="1sp" />

            <EditText
                android:id="@+id/daftar_nip_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#1560DB"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/masukan_nip"
                android:inputType="number" />

            <CheckBox
                android:visibility="visible"
                android:id="@+id/cek_nip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:theme="@style/MyCheckbox"
                android:text="@string/cek_nip"/>

            <TextView
                android:id="@+id/nip_pns"
                android:gravity="center"
                android:text="NIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/nama_pns"
                android:gravity="center"
                android:text="NAMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:visibility="gone"
                android:id="@+id/daftar_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:backgroundTint="#1560DB"
                android:hint="@string/masukan_email"
                android:inputType="textEmailAddress"
                android:autofillHints="" />

            <EditText
                android:visibility="gone"
                android:id="@+id/daftar_nama_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:backgroundTint="#1560DB"
                android:hint="@string/masukan_nama"
                android:inputType="text"
                android:autofillHints="" />

            <EditText
                android:visibility="gone"
                android:id="@+id/daftar_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:autofillHints=""
                android:backgroundTint="#1560DB"
                android:ems="10"
                android:hint="@string/masukan_password"
                android:inputType="textPassword"/>

            <EditText
                android:visibility="gone"
                android:id="@+id/daftar_ulangi_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint="@string/ulangi_password"
                android:backgroundTint="#1560DB"
                android:inputType="textPassword"
                android:autofillHints="" />

            <CheckBox
                android:visibility="gone"
                android:id="@+id/checkbox_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:theme="@style/MyCheckbox"
                android:text="@string/lihat_password"/>

            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/switch_syarat"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/SCBSwitch"/>

                <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/syarat_dan_ketentuan"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@+id/switch_syarat"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_password" />
            </LinearLayout>

            <Button
            android:id="@+id/daftar_lanjut_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"
            android:background="@drawable/button_lanjut_design"
            android:clickable="false"
            android:fontFamily="sans-serif-medium"
            android:text="@string/lanjut"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>