<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_image"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:gravity="center"
        android:background="@drawable/bg_beranda"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/photo_profile"
            android:layout_gravity="center"
            android:src="@drawable/ic_profil"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <!--<me.saket.flick.FlickDismissLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </me.saket.flick.FlickDismissLayout>-->


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1.3"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/rincian_akun_ll"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:src="@drawable/ic_profil_user"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_weight="2.2"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/rincian_akun"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    tools:autoSizeMaxTextSize="23sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:layout_width="0dp"
                    android:layout_height="25sp"/>

                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:id="@+id/ubah_sandi_ll"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:src="@drawable/ic_profil_reset_pass"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_weight="2.2"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/ubah_sandi"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    tools:autoSizeMaxTextSize="23sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:layout_width="0dp"
                    android:layout_height="25sp"/>

                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:id="@+id/kebijakan_privasi_ll"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:src="@drawable/ic_profil_privacy_policy"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_weight="2.2"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/kebijakan_privasi"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    tools:autoSizeMaxTextSize="23sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:layout_width="0dp"
                    android:layout_height="25sp"/>

                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:id="@+id/pusat_bantua_ll"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:src="@drawable/ic_profil_help"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_weight="2.2"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/pusat_bantuan"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    tools:autoSizeMaxTextSize="23sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:layout_width="0dp"
                    android:layout_height="25sp"/>

                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:id="@+id/disclaimer_ll"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:src="@drawable/ic_profil_disclaimer"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_weight="2.2"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/disclaimer"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="@android:color/black"
                    tools:autoSizeMaxTextSize="23sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:layout_width="0dp"
                    android:layout_height="25sp"/>

                <ImageView
                    android:src="@drawable/ic_keyboard_arrow_right_"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"/>

            </LinearLayout>

            <Button
                android:id="@+id/keluar_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/button_design_keluar"
                android:fontFamily="sans-serif-medium"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="#F44336"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>