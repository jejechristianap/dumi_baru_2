<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/bg_beranda"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo_profile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/nama"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

        <!--<me.saket.flick.FlickDismissLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </me.saket.flick.FlickDismissLayout>-->


    </LinearLayout>
    <LinearLayout
        android:id="@+id/rincian_akun_ll"
        android:orientation="horizontal"
        android:layout_below="@id/layout_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:id="@+id/ivAkun"
            android:layout_width="0dp"
            android:src="@drawable/ic_profil_user"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_weight="2.2"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/rincian_akun"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"/>
        <ImageView
        android:src="@drawable/ic_keyboard_arrow_right_"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_25sdp"
        android:layout_weight="0.4"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/rincian_akun_ll"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="#D2CECE"/>


    <LinearLayout
        android:id="@+id/ubah_sandi_ll"
        android:orientation="horizontal"
        android:layout_below="@id/view"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:id="@+id/ivUbahSandi"
            android:layout_width="0dp"
            android:src="@drawable/ic_profil_reset_pass"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_weight="2.2"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/ubah_sandi"
            android:textSize="@dimen/_14ssp"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"/>

        <ImageView
            android:src="@drawable/ic_keyboard_arrow_right_"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_below="@id/ubah_sandi_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="#D2CECE"/>

    <LinearLayout
        android:id="@+id/kebijakan_privasi_ll"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/view2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:id="@+id/ivKebijakanPrivasi"
            android:layout_width="0dp"
            android:src="@drawable/ic_profil_privacy_policy"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_weight="2.2"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/kebijakan_privasi"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"/>

        <ImageView
            android:src="@drawable/ic_keyboard_arrow_right_"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/kebijakan_privasi_ll"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="#D2CECE"/>

    <LinearLayout
        android:id="@+id/disclaimer_ll"
        android:orientation="horizontal"
        android:layout_below="@id/view3"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:id="@+id/ivDisclaimer"
            android:layout_width="0dp"
            android:src="@drawable/ic_profil_disclaimer"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_weight="2.2"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/disclaimer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"/>

        <ImageView
            android:src="@drawable/ic_keyboard_arrow_right_"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.4"/>

    </LinearLayout>

