                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
