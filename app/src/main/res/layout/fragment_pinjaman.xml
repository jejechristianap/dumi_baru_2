<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:gravity="center"
        android:background="@drawable/bg_beranda"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="@string/sisa_tagihan"
            android:gravity="center"
            android:textColor="@android:color/white"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:autoSizeMaxTextSize="20sp"
            tools:autoSizeStepGranularity="1sp"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/sisa_tagihan_pinjaman"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:autoSizeMaxTextSize="50sp"
            tools:autoSizeStepGranularity="1sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:progressBackgroundTint="#FF9800"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1.3"
        android:layout_marginBottom="50dp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/pinjaman"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/pinjaman"
                    android:gravity="end"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/tenor"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tenor_tahun_pinjaman"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:layout_width="0dp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/bunga"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/bunga_pinjaman"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:layout_width="0dp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/angsuran_perbulan"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/angsuran_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/asuransi"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/asuransi_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/administrasi"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/administrasi_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/transfer_antar_bank"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/transfer_bank_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/jumlah_yang_diterima"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/jumlah_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>