<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/bg_beranda"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressTagihan"
            style="?android:attr/progressBarStyleHorizontal"
            android:background="@drawable/circle_shape"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:max="100"
            android:progress="40"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"/>

        <TextView
            android:id="@+id/tagihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/progressTagihan"
            android:layout_alignEnd="@+id/progressTagihan"
            android:layout_alignBottom="@id/progressTagihan"
            android:layout_alignTop="@id/progressTagihan"
            android:padding="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/tagihan"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_weight="1.7"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/marginTop10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/status_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    app:autoSizeMinTextSize="8sp"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp"/>

                <TextView
                    android:id="@+id/status_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    app:autoSizeMinTextSize="8sp"
                    android:gravity="center"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp"/>
            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/pinjaman"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/pinjaman"
                    android:gravity="end"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/tenor"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tenor_pinjaman_bulan"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:layout_width="0dp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/bunga"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/bunga_pinjaman"
                    android:layout_weight="1.5"
                    android:gravity="end"
                    android:layout_width="0dp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/angsuran_perbulan"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/angsuran_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/asuransi"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/asuransi_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/administrasi"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/administrasi_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/transfer_antar_bank"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/transfer_bank_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/jumlah_yang_diterima"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />
                <TextView
                    android:id="@+id/jumlah_terima_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#D2CECE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/tanggal_pengajuan"
                    android:textColor="@android:color/black"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="20sp"
                    tools:autoSizeStepGranularity="1sp" />
                <TextView
                    android:id="@+id/tanggal_pengajuan_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="end"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:autoSizeMaxTextSize="15sp"
                    tools:autoSizeStepGranularity="1sp" />
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/pkButton"
                android:background="@drawable/button_custom_design_darkblue"
                android:text="@string/pk"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>