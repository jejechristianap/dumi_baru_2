                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/regularButton"
                        android:layout_below="@id/icRegular"
                        android:layout_alignStart="@id/icRegular"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:text="@string/dumi_regular_deskripsi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <Button
                        android:id="@+id/regularButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignStart="@id/icRegular"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/button_lanjut_design"
                        android:text="@string/ajukan"
                        android:textAllCaps="false"
                        android:textColor="@color/purple" />
                </RelativeLayout>
