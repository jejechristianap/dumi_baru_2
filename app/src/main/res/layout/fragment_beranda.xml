                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="@string/dumi_kilat_deskripsi"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11ssp" />
                        <Button
                            android:id="@+id/kilatButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignStart="@id/icKilat"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/button_lanjut_design"
                            android:text="@string/ajukan"
                            android:textAllCaps="false"
                            android:textColor="@color/blueKilat" />
                    </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cardRegular"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_18sdp"
                    android:layout_toEndOf="@id/cardKilat"
