<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlBgPinTen"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="@dimen/_90sdp"
        android:padding="@dimen/_12sdp"
        android:background="@drawable/ic_boxx"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvJangkaWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:text="@string/bulan_12"
            android:textColor="@color/white"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvJangkaWaktu"
            android:layout_alignBottom="@id/tvJangkaWaktu"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toEndOf="@id/tvJangkaWaktu"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            android:text="@string/bulan"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvMinimalPinjaman"
            android:layout_alignStart="@id/tvMinimalPinjaman"
            android:layout_alignParentEnd="true"
            android:text="@string/minimal_pinjaman"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp" />

        <TextView
            android:id="@+id/tvMinimalPinjaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvJangkaWaktu"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="top"
            android:text="@string/rp_1jt"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>