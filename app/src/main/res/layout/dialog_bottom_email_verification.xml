<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_"
    app:behavior_hideable="true"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    app:behavior_peekHeight="@dimen/_100sdp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlKirimKodeVerfikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv"
            android:text="@string/pastikan_email_sudah_benar"
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etVerifikasiEmail"
            android:layout_below="@id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:textSize="@dimen/_12ssp"
            android:backgroundTint="@color/darkBlue"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bEmailVerification"
            android:layout_below="@id/etVerifikasiEmail"
            android:text="@string/kirim_kode_verifikasi"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlue"
            android:layout_gravity="bottom|start"
            android:textAllCaps="false"
            android:background="@drawable/button_outerline_blue"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"/>
        <TextView
            android:id="@+id/countTime"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:layout_toEndOf="@id/bEmailVerification"
            android:layout_alignTop="@id/bEmailVerification"
            android:layout_alignBottom="@id/bEmailVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<Chronometer
            android:id="@+id/cmCode"
            android:layout_toEndOf="@id/bEmailVerification"
            android:layout_alignTop="@id/bEmailVerification"
            android:layout_alignBottom="@id/bEmailVerification"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlVerifikasiKode"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kode"
            android:text="@string/masukkan_kode_verifikasi_anda"
            android:textSize="@dimen/_12ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etKodeVerifikasi"
            android:layout_below="@id/kode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:textSize="@dimen/_12ssp"
            android:backgroundTint="@color/darkBlue"
            android:inputType="text"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/bVerfikasiKode"
            android:layout_below="@id/etKodeVerifikasi"
            android:text="@string/verifikasi_kode"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/colorBlue"
            android:layout_gravity="bottom|start"
            android:textAllCaps="false"
            android:background="@drawable/button_outerline_blue"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>


</LinearLayout>
